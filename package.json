{
  "name": "peptide-plus",
  "version": "1.0.0",
  "description": "Template web transactionnel sécurisé - Conforme Chubb/NYDFS/OWASP - Azure Ready",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:security": "eslint --config .eslintrc.security.json .",
    "test": "jest",
    "test:security": "npm run audit:deps && npm run scan:secrets && npm run scan:sast",
    "audit:deps": "npm audit --audit-level=moderate",
    "scan:secrets": "gitleaks detect --source . --verbose",
    "scan:sast": "semgrep --config=auto .",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "stripe:webhook": "stripe listen --forward-to localhost:3000/api/payments/webhook"
  },
  "dependencies": {
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    
    "@prisma/client": "^5.8.0",
    
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/msal-browser": "^3.5.0",
    "@azure/msal-react": "^2.0.0",
    
    "next-auth": "^5.0.0-beta.4",
    "@auth/prisma-adapter": "^1.2.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    
    "stripe": "^14.12.0",
    "@stripe/stripe-js": "^2.3.0",
    "@stripe/react-stripe-js": "^2.4.0",
    
    "jspdf": "^2.5.1",
    
    "next-intl": "^3.4.0",
    
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jose": "^5.2.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "prisma": "^5.8.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-security": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
