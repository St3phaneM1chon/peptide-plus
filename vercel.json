{
  "_comment": "ARCH-L08: Production deploys to Azure App Service. This file is kept for Vercel preview deployments, local dev cron definitions, and security headers reference.",
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/birthday-emails",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/abandoned-cart",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/points-expiring",
      "schedule": "0 11 * * 1"
    },
    {
      "path": "/api/cron/welcome-series",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/satisfaction-survey",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/release-reservations",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/update-exchange-rates",
      "schedule": "0 */6 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/auth/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/api/account/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/api/checkout/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/api/orders/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
