# ==============================================
# Peptide Plus - Environment Variables
# Copy to .env.local and fill in real values
# ==============================================

# ---- DATABASE ----
# PostgreSQL connection string (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/peptide_plus"

# ---- AUTHENTICATION (NextAuth v5) ----
# Secret used to sign JWTs and encrypt sessions
NEXTAUTH_SECRET="your-nextauth-secret-here"
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# ---- OAUTH PROVIDERS (optional - add only those you use) ----
# Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Apple
APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""
# Facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""
# Twitter/X
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""

# ---- AZURE AD (optional - enterprise SSO) ----
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""
# Azure Key Vault URL (optional)
AZURE_KEY_VAULT_URL=""

# ---- STRIPE (payments) ----
# Secret key (server-side)
STRIPE_SECRET_KEY="sk_test_..."
# Publishable key (client-side, exposed to browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Webhook signing secret
STRIPE_WEBHOOK_SECRET="whsec_..."

# ---- PAYPAL (optional - alternative payment) ----
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
# "sandbox" or "live"
PAYPAL_MODE="sandbox"
# Set to "true" for sandbox API URLs
PAYPAL_SANDBOX="true"
# Webhook ID for verifying PayPal webhook signatures
PAYPAL_WEBHOOK_ID=""

# ---- EMAIL ----
# Provider: "resend", "sendgrid", "smtp", or "log" (console only)
EMAIL_PROVIDER="log"
# Sender address
SMTP_FROM="noreply@yourdomain.com"
# Resend API key (if using Resend)
RESEND_API_KEY=""
# SendGrid API key (if using SendGrid)
SENDGRID_API_KEY=""
# Internal API key for email service routes
INTERNAL_API_KEY=""

# ---- OPENAI (optional - chat, translations, OCR, VoIP call transcription) ----
OPENAI_API_KEY=""

# ---- REDIS (optional - rate limiting, caching) ----
REDIS_URL=""

# ---- CRON JOBS ----
# Secret to authenticate cron job endpoints
CRON_SECRET="your-cron-secret"

# ---- SECURITY ----
# Encryption key for sensitive data (32-byte hex string)
ENCRYPTION_KEY=""
# CSRF protection secret (falls back to NEXTAUTH_SECRET)
CSRF_SECRET=""
# Platform OAuth token encryption key (64 hex chars = 32 bytes)
PLATFORM_ENCRYPTION_KEY=""

# ---- PLATFORM INTEGRATIONS (Content Hub Phase 6) ----
# Zoom OAuth App
ZOOM_CLIENT_ID=""
ZOOM_CLIENT_SECRET=""
ZOOM_WEBHOOK_SECRET_TOKEN=""
# Microsoft Teams: uses AZURE_AD_* vars above
# Google (Meet + YouTube)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Webex Integration
WEBEX_CLIENT_ID=""
WEBEX_CLIENT_SECRET=""
# Azure Blob Storage for recording files
AZURE_STORAGE_CONNECTION_STRING=""

# ---- VOIP / TELEPHONY (optional - FreeSWITCH CDR integration) ----
# Shared secret for validating CDR webhooks from FreeSWITCH (mod_json_cdr)
VOIP_CDR_WEBHOOK_SECRET=""

